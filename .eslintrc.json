{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["next", "next/core-web-vitals", "prettier"],
  "ignorePatterns": ["node_modules/", "dist/"],
  "rules": {
    "no-unused-vars": "error",
    "indent": ["error", 2],
    "no-var": "error",
    "no-nested-ternary": "off",
    "arrow-body-style": "off"
  }
}
